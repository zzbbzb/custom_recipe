/* pages/search/search.wxss */
.container{
  display:flex;
  flex-direction: column;
}

.searchBar {
  display: flex;
  flex-direction: wrap;
}

.search {
  flex:1rpx;
  display: flex;
  margin: 10rpx 0 10rpx 30rpx;
}

.canel {
  flex:0 1 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.historyBar {
  display:flex;
  flex-direction: wrap;
  align-items: center;
  justify-content: space-between;
  margin:20rpx 40rpx 20rpx 40rpx;
}

.deleteImg {
  width: 40rpx;
  height: 40rpx;
}

.historyContent {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.historyItem {
  border-radius: 50rpx;
  background:#dddddd;
  margin:20rpx;
  padding: 10rpx 50rpx 10rpx 50rpx;
}
