<!--components/w-search/w-search.wxml-->


<block wx:if="{{isOnlyImageBtn}}">
  <view class="search-box search-box-click" style="width:6.5vh;justify-content: center;" bindtap="skipToSearchPage">
    <image class="search_img search_img_only" src="/asserts/images/search/search.png"></image>
  </view>
</block>
<block wx:else>
  <view class="search-box search-box-background" style="width:{{search_width}}vw" bindtap="{{disable ? 'skipToSearchPage': ''}}">
    <image class="search_img" style="flex: 0 1 30rpx;" src="/asserts/images/search/search.png"></image>
    <input placeholder="{{default_content}}" class="search" bindinput="showSearchClear" value="{{inputValue}}" disabled="{{disable}}"></input>
    <block wx:if="{{isInput}}">
      <image class="search_clear" src="/asserts/images/search/cross_out.png" bindtap="clearInputData"></image>
    </block>
  </view>
</block>